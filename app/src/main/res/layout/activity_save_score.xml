<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveScoreActivity"
    android:background="@drawable/menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="GAME"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:textColor="#ffbb22"
        android:layout_centerInParent="true">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="OVER"
        android:textSize="50sp"
        android:textColor="#ffbb22"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true">

    </TextView>

    <TextView
        android:id="@+id/loose_LBL_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your score is:"
        android:layout_marginTop="200dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/loose_LBL_show_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toEndOf="@id/loose_LBL_score"
        android:layout_marginTop="200dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textSize="40sp"/>


    <EditText
        android:id="@+id/loose_LBL_insert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loose_LBL_show_score"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="enter your name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35sp">

    </EditText>

    <Button
        android:id="@+id/loose_BTN_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loose_LBL_insert_name"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#ffbb22"
        android:text="OK!"
        android:textSize="30dp"/>

</RelativeLayout>